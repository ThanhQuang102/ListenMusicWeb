    <!-- {{!-- Confirm delete music --}} -->
<div id="delete-music-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa bài hát?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn xóa bài hát này?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button id="btn-delete-music" type="button" class="btn btn-danger">Xóa bỏ</button>
      </div>
    </div>
  </div>
</div>

<!-- {{!-- Delete hidden form --}} -->
<form name="delete-music-form" method="POST"></form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var musicId;
        var deleteForm = document.forms['delete-music-form'];
        var btnDeleteMusic = document.getElementById('btn-delete-music');

        // When dialog confirm clicked
        $('#delete-music-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            musicId = button.data('id');
        });
        
        // When delete music btn clicked
        btnDeleteMusic.onclick = function () {
            deleteForm.action = '/admin/delete/' + musicId + '?_method=DELETE';
            deleteForm.submit();
        }
    });
</script>


