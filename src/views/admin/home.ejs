        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên nhạc</th>
                    <th scope="col">Tác giả</th>
                    <th scope="col">Phong cách</th>
                    <th scope="col">Thời lượng</th>
                    <th scope="col">Tên file mp3</th>
                    <!-- <th scope="col" colspan="2">Thời gian tạo</th> -->
                </tr>
            </thead>
            <tbody>
                <%var i = 1 %>
                <% result.forEach(function(a) { %>
                <tr>
                    <td><%= i++ %></td>
                    <td><%= a.name %></td>
                    <td><%= a.author %></td>
                    <td><%= a.style %></td>
                    <td><%= a.duration %></td>
                    <td><%= a.track %></td>
                    <!-- <td><%= a.createdAt %></td> -->
                    <td>
                        <a href="/admin/update/<%= a._id %>" class="btn btn-link">Repair</a>
                        <!-- <a href="/admin/delete/<%= a._id %>" class="btn btn-link" style="color: red;">Delete</a> -->
                        <a href="" class="btn btn-link" data-toggle="modal" data-id="<%=a._id%>" data-target="#delete-music-modal" style="color: red">Delete</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
